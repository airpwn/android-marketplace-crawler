<h1>Listing apps</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Creator</th>
    <th>Category</th>
    <th>Price</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @apps.each do |app| %>
  <tr>
    <td><%= app.title %></td>
    <td><%= app.creator %></td>
    <td><%= app.category %></td>
    <td><%= app.price %></td>
    <td><%= link_to 'Show', app %></td>
    <td><%= link_to 'Edit', edit_app_path(app) %></td>
    <td><%= link_to 'Destroy', app, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

